                    <div class="info-data">
                        <p class="info-title">Niye it BRAINS?</p>
                        <p class="info-description">
                            @Model.About.Text
                        </p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-12">
                    <div class="info-video">
                        <img src="~/src/images/@Model.About.Image" alt="" />
