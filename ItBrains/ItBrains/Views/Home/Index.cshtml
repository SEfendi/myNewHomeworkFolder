    <!-- **************************   News start     ************************ -->
    <section class="news">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="news-title">
                    <p>Ən Son Xəbərlər</p>
                </div>
            </div>
            <div class="row align-items-center justify-content-center">
                @foreach (Blog blog in Model.Blogs)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card" style="width: 100%">
                            <div class="news-img">
                                <img src="~/src/images/@blog.Image"
                                     class="card-img-top"
                                     alt="news1" />
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    @blog.Title
                                </h5>
                                <p class="card-text">
                                    @blog.Subtitle
                                </p>
                                <a href="newsDetail.html" class="news-button">
                                    ƏTRAFLI <span> <i class="fas fa-angle-right"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </section>
    <!-- *********************  News end    ************************ -->
    <!-- ******************************************************************** -->
    <!-- ********************************************************************** -->
    <!-- **************************   Teachers start     ************************ -->
    <section class="graduated ">
        <div class="idea">
            <p>MƏZUNLARIMIZIN FİKİRLƏRİ</p>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="owl-carousel owl-theme owl-graduated">
                        @foreach (FeedBack feedBack in Model.FeedBacks)
                        {
                            <div class="item">
                                <i class="fas fa-quote-left"></i>
                                <div class="card">
                                    <div class="card-about">
                                        <div class="card-image">
                                            <img class="card-img-top"
                                                 src="~/src/img/teachers/@feedBack.Image"
                                                 alt="" />
                                        </div>
                                        <div class="card-name">
                                            <p class="name">@feedBack.FullName</p>
                                            <p class="field">@feedBack.CoursesName</p>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <p>
                                            @feedBack.Comment
                                        </p>
                                    </div>
                                    <p class="border-bottom"></p>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
