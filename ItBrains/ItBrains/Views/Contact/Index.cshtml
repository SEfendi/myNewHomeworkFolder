@section Css{
    <link rel="stylesheet" href="~/src/css/secondary.css" />
}

<!-- *********************     Main  Start     ************************ -->
<main>
    <!-- *********************     Contact  Start     ************************ -->
    <section class="contact second-section my-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="img-area">
                        <img src="~/src/img/P1100236.JPG"
                             alt="reception"
                             class="img-fluid" />
                        <div class="
                    contact-info
                    d-flex
                    justify-content-center
                    align-items-center
                  ">
                            <div class="contact-info-item itb mr-sm-5">
                                <h6 class="text-center">
                                    <i class="fas fa-phone-volume fa-2x mr-1"
                                       style="transform: rotate(-45deg)"
                                       aria-hidden="true"></i>MOBİL
                                </h6>
                                <span>+99123456789</span>
                            </div>
                            <div class="contact-info-item">
                                <h6 class="text-center">
                                    <i class="fas fa-envelope-open-text fa-2x mr-1"
                                       aria-hidden="true"></i>
                                    EMAİL
                                </h6>
                                <span>info@itbrains.az</span>
                            </div>
                        </div>
                        <div class="
                    address-info

                  ">
                            <div class="contact-info-item itb  d-flex
                    justify-content-center
                    align-items-baseline ">
                                <h6 class="text-center mr-2">
                                    <i class="fas fa-search-location mr-1"></i>Ünvan:
                                </h6>
                                <span>  AF BUSINESS HOUSE 2-ci mərtəbə</span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="title text-center my-5 mt-lg-0">Bizimlə Əlaqə</h2>
                        </div>
                    </div>
                    <form class="contact-form pl-lg-3">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Ad"
                                           id="name" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input type="text"
                                           class="form-control"
                                           placeholder="E-Mail"
                                           id="email" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group mt-2">
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Mövzu"
                                           id="subject" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group mt-2">
                                    <textarea class="form-control"
                                              name="comments"
                                              id="comment"
                                              cols="25"
                                              rows="5"
                                              placeholder="Əlavə rəyiniz"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <button class="iTbtn" type="submit">Göndər</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- *********************       Contact  End     ************************ -->
    <!-- ******************************************************************** -->
    <!-- ******************************************************************** -->
</main>
<!-- *********************      Main  End     ************************ -->
<!-- ******************************************************************** -->